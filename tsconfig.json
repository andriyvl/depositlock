{
  "extends": "./nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "jsx": "preserve",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/components/*": [
        "./lib/components/*"
      ],
      "@/components/ui/*": [
        "./lib/components/ui/*"
      ],
      "@/styles/*": [
        "./lib/styles/*"
      ],
      "@/hooks/*": [
        "./lib/hooks/*"
      ],
      "@/helpers/*": [
        "./lib/helpers/*"
      ],
      "@/model/*": [
        "./lib/model/*"
      ],
      "@/lib-shared/*": [
        "./lib-shared/*"
      ],
      "@/lib-shared/model/*": [
        "./lib-shared/model/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "app/**/*",
    "**/*.ts",
    "**/*.tsx",
    "lib-shared/**/*",
    "lib/**/*",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "supabase"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
